pipeline {
  agent any

  tools {
    maven 'Maven3.9.11'
    jdk 'jdk21'
  }

  stages {

    stage('Checkout Code') {
      steps {
        echo 'ğŸ”„ Pulling latest code from GitHub...'
        git branch: 'main', url: 'https://github.com/seshasai-meka/Apitesting.git'
      }
    }

    stage('Build and Test Project') {
      steps {
        dir('APIProject') {
          echo 'âš™ï¸ Building and running tests from APIProject folder...'
          sh 'mvn clean compile'
          sh 'mvn test'
        }
      }
    }

    stage('Publish Cucumber HTML Report') {
      steps {
        echo 'ğŸ“Š Publishing Cucumber HTML Report...'
        publishHTML([
          allowMissing: true,
          alwaysLinkToLastBuild: true,
          keepAll: true,
          reportDir: 'APIProject/Report',
          reportFiles: 'cucumberProject.html',
          reportName: 'Cucumber Test Report'
        ])
      }
    }
  }

  post {
    always {
      echo 'ğŸ§¹ Cleaning up workspace...'
      cleanWs()
    }
    success {
      echo 'âœ… Build and Tests Completed Successfully!'
    }
    failure {
      echo 'âŒ Build or Tests Failed. Check Console Output for Details.'
    }
  }
}
