pipeline {
    agent any

    tools {
        // Use Maven and JDK configured in Jenkins
        maven 'Maven3.9.11'
    jdk 'jdk21'
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'Pulling latest code from GitHub...'
                git branch: 'main', url: 'https://github.com/seshasai-meka/Apitesting.git'
            }
        }

        stage('Build Project') {
            steps {
                echo 'Building Maven project...'
                sh 'mvn clean compile'
            }
        }

        stage('Run API Tests') {
            steps {
                echo 'Running Cucumber + RestAssured Tests...'
                sh 'mvn test'
            }
        }

        stage('Generate HTML Report') {
            steps {
                echo 'Publishing Extent Report...'
                // Update reportDir and reportFiles if your folder name changes
                publishHTML([
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'Report',
                    reportFiles: 'extent-report.html',
                    reportName: 'Extent Report'
                ])
            }
        }
    }

    post {
        always {
            echo 'Cleaning up workspace...'
            cleanWs()
        }
        success {
            echo '✅ Build and Tests Completed Successfully!'
        }
        failure {
            echo '❌ Build or Tests Failed. Check Console Output for Details.'
        }
    }
}
